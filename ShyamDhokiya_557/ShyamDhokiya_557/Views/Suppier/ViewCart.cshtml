@model List<ShyamDhokiya_557_Model.ViewModel.CartDetailModel>

<div class="container mt-3">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title text-primary" style="font-weight : bold">View Cart</h3>
            @if (Model.Count != 0 && Model != null)
            {
                <table class="table-bordered table table-hover">
                    <thead class="table-primary">
                        <tr>
                            <th>Product Name</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Total Price</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td class="text-center">
                                    <a class="mx-2 btn btn-outline-danger fs-6" href="~/Suppier/DecreaseQuantity?CartDetailId=@item.CartDetailId"><i class="fa-solid fa-minus"></i></a>
                                    <span class="mx-2">@item.Quantity</span>
                                    <a class="mx-2 btn btn-outline-success fs-6" href="~/Suppier/IncreaseQuantity?CartDetailId=@item.CartDetailId"><i class="fa-solid fa-plus"></i></a>
                                </td>
                                <td>@item.Price</td>
                                <td class=".Total">@(item.Total * item.Quantity)</td>
                                <td><a class="btn btn-sm btn-success" href="~/Suppier/RemoveCart?CartDetailId=@item.CartDetailId">Remove</a></td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="d-flex justify-content-end mt-3">
                    <a href="~/Suppier/AddOrder" class="btn btn-success">Order Item</a>
                </div>
            }
            else
            {
                <div class="cart">
                    <p class="fs-1 fw-bold text-dark text-center mt-5">Oops! Your Cart Empty</p>
                </div>

            }
      
        </div>
    </div>
    <div class="mt-3">
        <a href="Index" class="btn btn-primary">Back To Home</a>
    </div>
</div>


