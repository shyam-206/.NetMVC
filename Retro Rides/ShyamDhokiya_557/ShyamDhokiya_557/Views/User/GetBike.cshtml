@model ShyamDhokiya_557_Model.ViewModel.BikeModel

@{
    ViewBag.Title = "GetBike";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<div class="container my-5">
    <div class="hero border border-1 border-secondary rounded-3 p-2">
        <div class="my-2">
            <a class="rounded-4 border-5 bg-primary-subtle px-2 py-1" href="Index"><i class="fa-solid fa-arrow-left"></i></a>
        </div>
        <div class="bg-primary-subtle fs-4 fw-bold px-2 rounded-3 text-primary">@Model.Models</div>
        <div id="carousel-@Model.BikeId" class="carousel slide carousel-dark" data-bs-ride="carousel">
            <div class="carousel-inner d-flex align-items-center " style="width:100%; height:400px">
                @{
                    bool first = true;
                    foreach (var img in Model.BikeImages)
                    {
                        <div class="carousel-item @(first ? "active" : "") text-center">
                            <img src="~/Content/BikeImage/@img" class="d-block mx-auto w-25">
                        </div> first = false;
                    } }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carousel-@Model.BikeId" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carousel-@Model.BikeId" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        <div class="mt-3 mx-3">
            <div class="">
                <p class="fs-6"><span class="fw-bold">Description</span> : @Model.Description</p>
            </div>
            <hr />
            <div class="d-flex justify-content-between">
                <div>
                    <p class="fs-6"><span class="fw-bold">Brand Name : </span>@Model.Brand</p>
                    <p class="fs-6"><span class="fw-bold">Price : </span>@Model.Price</p>
                    <p class="fs-6"><span class="fw-bold">kilometers Driven : </span>@Model.kilometresDriven Km.</p>
                    <p class="fs-6"><span class="fw-bold">Manufacture Year : </span>@Model.Years</p>
                </div>
                <div>
                    <p class="fs-6"><span class="fw-bold">Years Of Usage: </span> @(2024 - Model.Years)</p>
                    <p class="fs-6"><span class="fw-bold">Seller Name : </span>@Model.FirstName @Model.LastName</p>
                    <p class="fs-6"><span class="fw-bold">Seller Email: </span>@Model.Email</p>
                    <p class="fs-6"><span class="fw-bold">Phone Number : </span>@Model.PhoneNumber</p>
                </div>
            </div>
        </div>
    </div>

</div>

