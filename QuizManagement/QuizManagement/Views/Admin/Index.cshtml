@model List<QuizManagement_Model.ViewModel.QuizModel>

<div class="container mt-5">
    <div class="card">
        <div class="card-body d-flex justify-content-center">
            <div>
                @Html.ActionLink("Create Quiz", "Create", new { Controller = "Admin" }, new { @class = "btn btn-success" })
            </div>
        </div>
    </div>

    <div class="card mt-5">
        <div class="card-body">
            <h4 class="text-center" style="color: #2A629A;">Quiz List</h4>
            <div>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <td>Title</td>
                            <td>Description</td>
                            <td>Action</td>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a href="CreateQuestion">@item.title</a>
                                    </td>
                                    <td>@item.description</td>
                                    <td>
                                        <div>
                                            @Html.ActionLink("Edit", "EditQuiz", new { quiz_id=item.quiz_id, Controller = "Admin" }, new { @class = "btn btn-success sm" })
                                            @Html.ActionLink("Delete", "Delete", new { quiz_id=item.quiz_id ,Controller = "Admin" }, new { @class = "btn btn-danger sm" })
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>