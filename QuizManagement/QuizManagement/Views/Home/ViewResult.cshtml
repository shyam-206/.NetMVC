@model List<QuizManagement_Model.ViewModel.ResultAnswerModel>

@{
    ViewBag.Title = "ViewResult";
}
<div class="container mt-2">
    <div class="card">
        <div class="card-body">

            <div class="d-flex justify-content-between align-items-center">
                <h3>Quiz Score  = @(ViewBag.score * 10) / 50</h3>
                @if (ViewBag.score > 2)
                {
                    <h3 class="text-success">Pass</h3>
                }
                else
                {
                    <h3 class="text-danger">Fail</h3>
                }
            </div>
            <hr />
            <div class="mt-3">

                @foreach (var i in Model)
                {
                    <p>@i.ques_text</p>
                    foreach (var option in i.OptionList)
                    {
                        if (i.Selected_option_id == option.option_id)
                        {
                            <div class="bg-success form-control my-2">
                                <p>@option.option_text</p>
                            </div>

                        }
                        else
                        {
                            if (i.Correct_option_Id == option.option_id && i.Selected_option_id != option.option_id)
                            {
                                <div class="form-control my-2 bg-danger">
                                    <p>@option.option_text</p>
                                </div>
                            }
                            else
                            {
                                <div class="form-control my-2">
                                    <p>@option.option_text</p>
                                </div>
                            }


                        }
                    }
                }

            </div>

            <div class="mt-3">
                <a href="Index" class="btn btn-primary">Back To Dashboard</a>
            </div>
        </div>

    </div>
</div>

