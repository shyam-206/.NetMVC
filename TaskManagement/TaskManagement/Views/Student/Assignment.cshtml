@model List<TaskManagement_Model.DBContext.Assignment>
@using TaskManagement.Session;


@if (@TempData["StudentLogin"] != null)
{
    <script>
        toastr.success('@TempData["StudentLogin"]')
    </script>
}



@if (@TempData["CompleteTask"] != null)
{
    <script>
        toastr.success('@TempData["CompleteTask"]')
    </script>
}


<div class="container-fluid mt-5">

    <input type="text" value="@SessionHelper.UserId" hidden />

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <td>Task Name</td>
                <td>Task Description</td>
                <td>Deadline</td>
                <td>Teacher Name</td>
                <td>Status</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Task.TaskName</td>
                    <td>@item.Task.Description</td>
                    <td>@item.Task.Deadline.ToString().Split(' ')[0]</td>
                    <td>@item.Task.Teacher.Username</td>
                    <td>

                        @if (item.Status == false)
                        {
                            if (item.Task.Deadline > DateTime.Now)
                            {
                                <div>
                                    <a class="btn btn-warning btn-sm" href="~/Student/SetAssignmentStatus?id=@item.AssignmentID">Please Submit</a>
                                </div>
                            }
                            else
                            {
                                <div class="btn btn-danger btn-sm" disabled>Deadline Over</div>
                            }

                        }
                        else
                        {
                            <div class="btn btn-success btn-sm">Already Completed</div>
                        }


                    </td>

                    <td>
                        <button class="btn btn-secondary detailTask" id="detailTask" value="@item.Task.TaskID">
                            Detail
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Task Detail</h5>
                    
                </div>
                <div class="modal-body" id="modalBody">


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('.detailTask').on("click", function () {
            debugger
            $('#modalBody').empty();
            var TaskID = $(this).val()
            
            $.ajax({
                type: "GET",
                url: "/Student/Detail?TaskID=" + TaskID,
                processData: false,
                contentType: false,
                success: function (data) {
                    $("#modalBody").append(data);
                    $('#exampleModal').modal('show');

                    console.log('Success');
                }
            })
        })
    })
</script>