@model List<TaskManagement_Model.DBContext.Assignment>
@using TaskManagement.Session;


@if (@TempData["StudentLogin"] != null)
{
    <script>
        toastr.success('@TempData["StudentLogin"]')
    </script>
}



@if (@TempData["CompleteTask"] != null)
{
    <script>
        toastr.success('@TempData["CompleteTask"]')
    </script>
}


<div class="container-fluid mt-5">

    <input type="text" value="@SessionHelper.UserId" hidden />

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <td>Task Name</td>
                <td>Task Description</td>
                <td>Deadline</td>
                <td>Teacher Name</td>
                <td>Status</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Task.TaskName</td>
                    <td>@item.Task.Description</td>
                    <td>@item.Task.Deadline.ToString().Split(' ')[0]</td>
                    <td>@item.Task.Teacher.Username</td>
                    <td>

                        @if (item.Status == false)
                        {
                            if (item.Task.Deadline > DateTime.Now)
                            {
                                <div>
                                    <a class="btn btn-warning btn-sm" href="~/Student/SetAssignmentStatus?id=@item.AssignmentID">Please Submit</a>
                                </div>
                            }
                            else
                            {
                                <div class="btn btn-danger btn-sm" disabled>Deadline Over</div>
                            }

                        }
                        else
                        {
                            <div class="btn btn-success btn-sm">Already Completed</div>
                        }


                    </td>
                </tr>
            }
        </tbody>
    </table>




</div>
